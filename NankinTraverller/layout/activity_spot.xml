<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <android.support.v7.widget.Toolbar
        android:id="@+id/spot_toolbar"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <ImageView
            android:id="@+id/spot_toolbar_image_left"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/ic_left_back"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp" />

        <TextView
            android:id="@+id/spot_toolbar_text_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textSize="18sp"
            android:textColor="#ffffff"/>

        <ImageView
            android:id="@+id/spot_toolbar_image_edit"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/edit"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"/>

        <ImageView
        android:id="@+id/spot_toolbar_image_delete"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@drawable/close"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"/>




    </android.support.v7.widget.Toolbar>



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/spot_text_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"/>


            <ImageView
                android:id="@+id/spot_toolbar_like"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_below="@id/spot_text_1"
                android:background="@drawable/like"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="10dp"
                />

            <TextView
                android:id="@+id/spot_toolbar_like_word"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/spot_toolbar_like"
                android:layout_below="@id/spot_text_1"
                android:text="点赞"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="12dp"
                />

            <ImageView
                android:id="@+id/spot_toolbar_star"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_below="@id/spot_text_1"
                android:layout_toRightOf="@id/spot_toolbar_like_word"
                android:background="@drawable/star"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="10dp"
                />

            <TextView
                android:id="@+id/spot_toolbar_star_word"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/spot_text_1"
                android:layout_toRightOf="@id/spot_toolbar_star"
                android:text="收藏"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="12dp"
                />

            <ImageView
                android:id="@+id/spot_toolbar_comment"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_below="@id/spot_text_1"
                android:layout_toRightOf="@id/spot_toolbar_star_word"
                android:background="@drawable/message"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="10dp"
                />

            <TextView
                android:id="@+id/spot_toolbar_comment_word"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/spot_toolbar_comment"
                android:layout_below="@id/spot_text_1"
                android:text="评论"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="12dp"
                />





        </RelativeLayout>


    </ScrollView>





</LinearLayout>





